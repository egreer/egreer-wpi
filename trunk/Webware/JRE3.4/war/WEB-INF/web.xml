<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>CreateEstimate</servlet-name>
		<servlet-class>planningPoker.CreateEstimateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateEstimate</servlet-name>
		<url-pattern>/createEstimate</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>planningPoker.CreateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/createUser</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>planningPoker.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserStory</servlet-name>
		<servlet-class>planningPoker.UserStoryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserStory</servlet-name>
		<url-pattern>/userStory</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Permissions</servlet-name>
		<servlet-class>planningPoker.PermissionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Permissions</servlet-name>
		<url-pattern>/setPermissions</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ChangePassword</servlet-name>
		<servlet-class>planningPoker.ChangePasswordServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChangePassword</servlet-name>
		<url-pattern>/changePassword</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
